<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>

<p><%= link_to "Edit task", edit_task_path(@task) %></p>
<p><%= link_to "Delete task", task_path(@task), method: :delete, data: { confirm: "Do you really want to delete this task?"} %></p>
<p><%= link_to "Back to tasks", tasks_path %></p>
